body
  position relative
  color white
  height vh 100
  background-color #232c39
  font-family Arial, Helvetica, Helvetica Neue
  overflow-y hidden
  background-image linear-gradient(45deg, rgba(0, 216, 255, .5) 10%, rgba(0, 1, 127, .7))

h2
  margin 0
  font-size 2.25rem
  font-weight bold
  color white
  letter-spacing -.025em

a
  color white
  opacity 0.75
  text-decoration none

  &:hover
    opacity 1

.container
  position absolute
  top 30%
  left 10px
  text-align center

  h2
    font-size 5rem

  a
    font-size 1.4rem

.backButton
  position absolute

.counter
  position absolute
  top 30%
  left 45%
  font-size 10rem
  font-weight bold
  letter-spacing -0.25em

.buttonGroup
  position relative
  top 500px
  width 480px
  margin 0 auto

.button
  font-size 1.6rem
  font-weight bold
  background-color white
  border-radius 50%
  margin 10px
  width 100px
  height 100px
  opacity 0.7
  cursor pointer

  &:hover
    color white
    background-color rgba(0,0,0,0.5)
